<form action="/posts<% if (@post[:id] != '') %>/<%= @post[:id] %><% end %>" method="post">

  <div>
    <label>Title</label>
    <input type="text" name="title" value="<%= @post[:title] %>">
  </div>

  <div>
    <label>Description</label>
    <textarea name="body" rows="8" cols="40"><%= @post[:body] %></textarea>
  </div>

  <input type="submit" value="submit">

  <% if (@post[:id] != "") %>
    <input type="hidden" name="_method" value="put">
  <% end %>

</form>
