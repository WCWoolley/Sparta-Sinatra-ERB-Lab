<form class="" action="index.html" method="post">

  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title for your post.." value="<%= @post[:title] %>">
  </div>

  <div>
    <label>Description</label>
    <textarea name="body" rows="8" cols="40" placeholder="Enter a description for your post.."><%= @post[:body] %></textarea>
  </div>

  <input type="submit" value="submit">

  <% if (@post[:id] != "") %>
    <input type="hidden" name="_method" value="put">
  <% end %>

</form>
