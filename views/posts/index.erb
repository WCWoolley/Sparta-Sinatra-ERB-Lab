<h1>Welcome to the Homepage</h1>

<% @posts.each do |post| %>
  <a href="/posts/<%= post[:id] %>">
    <h3><%= post[:title] %></h3>
  </a>
  <a href="/posts/<%= post[:id] %>/edit">Edit</a>

  <form action="/posts/<%= post[:id] %>" method="post">
    <input type="submit" value="delete">
    <input type="hidden" name="_method" value="delete">
  </form>
<% end %>
